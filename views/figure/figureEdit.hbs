<div class="container col-md-6 mt-10 mb-3 card bg-light" id="toy-container">
   <form action="/figure/edit/{{ figure._id }}" method="post">
      <h1 class="text text-danger text-center text-uppercase mt-3">Edit Figure</h1>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Brand</label>
         <input class="form-control" type="text" name="brand" value={{ figure.brand }} required>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Name</label>
         <input class="form-control" type="text" name="name" value={{ figure.name }} required>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Price</label>
         <input class="form-control" type="text" name="price" value={{ figure.price }} required>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Date</label>
         <input class="form-control" type="date" name="date" value={{ figure.date }} required>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Quantity</label>
         <input class="form-control" type="text" name="quantity" value={{ figure.quantity }} required>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Color</label>
         <select class="form-control" name="color">
            <option value="red">Red</option>
            <option value="blue">Blue</option>
            <option value="green">Green</option>
            <option value="purple">Purple</option>
            <option value="white">White</option>
            <option value="black">Black</option>
         </select>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Image URL</label><br>
         <img src="{{ figure.image }}" width="412" height="400">
         <input class="form-control" type="text" name="image" value={{ figure.image }} required>
      </div>
      <div class="form-group text-center mt-3">
         <input class="btn btn-primary" type="submit" value="Edit">
      </div>
      <div class="form-group text-center mb-3">
         <a href="/">Back</a>
      </div>
   </form>
</div>