<div class="container mt-5 mb-5" id="toy-container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="row">
                    <div class="col-md-6">
                        <div class="images p-3">
                            <div class="text-center p-4"> <img id="main-image" src="{{ figure.image }}" width="412"
                                    height="400"> </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="product p-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center"> <i class="fa fa-long-arrow-left"></i> 
                                    <a id="buton" class="ml-1 btn btn-secondary" href="/">Back</a> 
                                </div>
                            </div>
                            <div class="mt-4 mb-3"> <span class="text-uppercase text-muted brand">{{ figure.brand
                                    }}</span>
                                <h5 class="text-uppercase">{{ figure.name }}</h5>
                                <div class="price d-flex flex-row align-items-center"> 
                                    <span class="act-price">${{ figure.price }}</span>
                                </div>
                            </div>
                            
                            <div class="quanity mt-5">39
                                <h6 class="text-uppercase">Quantity: {{ figure.quantity }}</h6> 
                            </div>
                            <div class="cart mt-4 align-items-center"> 
                                <a href="/figure/figureEdit/{{ figure._id }}" class="btn btn-warning text-uppercase mr-2 px-4">Edit</a>
                                <a href="/figure/delete/{{ figure._id }}" class="btn btn-danger text-uppercase mr-2 px-4">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>